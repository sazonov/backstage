<?xml version="1.0" encoding="UTF-8"?>
<included>
	<springProperty name="rollingMaxHistory" source="app.logging.file.max-history" defaultValue="100"/>
	<springProperty name="rollingMaxFileSize" source="app.logging.file.max-size" defaultValue="30MB"/>
	<springProperty name="rollingTotalSizeCap" source="app.logging.file.total-size-cap" defaultValue="0"/>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FILE}</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/archive/${LOG_NAME}-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
			<maxHistory>${rollingMaxHistory}</maxHistory>
			<maxFileSize>${rollingMaxFileSize}</maxFileSize>
			<totalSizeCap>${rollingTotalSizeCap}</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<charset>UTF-8</charset>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>
</included>